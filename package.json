{
  "name": "listing-generator",
  "displayName": "Listing Generator (LG)",
  "description": "VS Code integration for the Listing Generator CLI: generate code listings, contexts, paths and stats.",
  "publisher": "max-moro",
  "version": "0.9.3",
  "author": {
    "name": "Maxim Morozov",
    "email": "mmocentre@gmail.com",
    "url": "https://github.com/Max-Moro"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Max-Moro/lg-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/Max-Moro/lg-vscode/issues"
  },
  "homepage": "https://github.com/Max-Moro/lg-vscode",
  "license": "Apache-2.0",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "ai",
    "chatgpt",
    "claude",
    "copilot",
    "gemini",
    "context",
    "prompt",
    "code analysis",
    "documentation",
    "listing"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:lg-cfg"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lg",
          "title": "Listing Generator",
          "icon": "media/lg.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "lg.toggleIncludedViewMode",
        "title": "Toggle Tree/Flat View",
        "icon": "$(list-tree)"
      },
      {
        "command": "lg.showLogs",
        "title": "LG: Show Logs"
      },
      {
        "command": "lg.ai.configureOpenAI",
        "title": "LG: Configure OpenAI API Key"
      },
      {
        "command": "lg.refreshCatalogs",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "lg.createStarter",
        "title": "Create Starter Config",
        "icon": "$(new-file)"
      },
      {
        "command": "lg.openConfig",
        "title": "Open Config",
        "icon": "$(file)"
      },
      {
        "command": "lg.doctor",
        "title": "Doctor",
        "icon": "$(pulse)"
      },
      {
        "command": "lg.resetCache",
        "title": "Reset Cache",
        "icon": "$(trash)"
      },
      {
        "command": "lg.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      }
    ],
    "views": {
      "lg": [
        {
          "type": "webview",
          "id": "lg.control",
          "name": "LG â€” Control Panel",
          "icon": "media/lg.svg"
        },
        {
          "id": "lg.included",
          "name": "Included Files",
          "icon": "media/lg.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "lg.toggleIncludedViewMode",
          "when": "view == lg.included",
          "group": "navigation@10"
        },
        {
          "command": "lg.refreshCatalogs",
          "when": "view == lg.control",
          "group": "navigation@1"
        },
        {
          "command": "lg.createStarter",
          "when": "view == lg.control",
          "group": "config@1"
        },
        {
          "command": "lg.openConfig",
          "when": "view == lg.control",
          "group": "config@2"
        },
        {
          "command": "lg.doctor",
          "when": "view == lg.control",
          "group": "diagnostics@1"
        },
        {
          "command": "lg.resetCache",
          "when": "view == lg.control",
          "group": "diagnostics@2"
        },
        {
          "command": "lg.openSettings",
          "when": "view == lg.control",
          "group": "settings@1"
        }
      ],
      "commandPalette": [
        {
          "command": "lg.toggleIncludedViewMode",
          "when": "false"
        },
        {
          "command": "lg.refreshCatalogs",
          "when": "false"
        },
        {
          "command": "lg.createStarter",
          "when": "false"
        },
        {
          "command": "lg.openConfig",
          "when": "false"
        },
        {
          "command": "lg.doctor",
          "when": "false"
        },
        {
          "command": "lg.resetCache",
          "when": "false"
        },
        {
          "command": "lg.openSettings",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Listing Generator",
      "properties": {
        "lg.logging.level": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Logging level for the Listing Generator Output channel."
        },
        "lg.defaultSection": {
          "type": "string",
          "default": "all-src",
          "description": "Default section id from lg-cfg/sections.yaml or any *.sec.yaml."
        },
        "lg.defaultTemplate": {
          "type": "string",
          "default": "",
          "description": "Default context name from lg-cfg (without .ctx.md)."
        },
        "lg.developerMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable Developer Mode to test unreleased CLI versions with a local Python interpreter."
        },
        "lg.python.interpreter": {
          "type": "string",
          "default": "",
          "description": "[Developer Mode Only] Path to Python interpreter in CLI development venv (e.g., /path/to/lg-cli/.venv/bin/python)."
        },
        "lg.openAsEditable": {
          "type": "boolean",
          "default": false,
          "description": "Open generated listings/contexts as editable Markdown files instead of read-only virtual documents."
        },
        "lg.ai.provider": {
          "type": "string",
          "enum": [
            "clipboard",
            "github.copilot",
            "cursor.composer",
            "claude.cli",
            "openai.api"
          ],
          "enumDescriptions": [
            "Copy to clipboard",
            "GitHub Copilot Chat (requires extension)",
            "Cursor Composer (requires Cursor IDE)",
            "Claude CLI (requires claude command in PATH)",
            "OpenAI API"
          ],
          "default": "clipboard",
          "description": "AI provider for 'Send to AI' action"
        },
        "lg.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key (stored in VS Code secrets)",
          "markdownDescription": "OpenAI API Key for network integration. [Get your key](https://platform.openai.com/api-keys)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "build": "npm run compile",
    "build:ui": "npx ts-node src/build-ui.ts",
    "vscode:prepublish": "npm run build && npm run build:ui",
    "package": "vsce package",
    "publish:ovsx": "ovsx publish",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "json-schema-to-typescript": "^15.0.4",
    "ovsx": "^0.10.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.49.0",
    "vsce": "^2.15.0"
  }
}
